
      <nav class="truck-nav">
        <div class="truck-nav-filter current" data-filter="*">
          All
        </div>
        <% 
            trucks_sorted_by_gvwr = data.trucks.sort_by {|t| t.gvwr_class}
            trucks_by_gvwr = trucks_sorted_by_gvwr.group_by {|t| t.gvwr_class}
            trucks_by_gvwr.each do |gvwr, trucks|
        %>
        <% weight_class = gvwr_by_id(gvwr) %>
        <div class="truck-nav-filter" data-filter=".<%= weight_class.slug %>">
          <%= weight_class.name %>
        </div>
        <% end %>
      </nav>

      <div class="grid">
        <div class="grid-cell-sizer"></div>
        <% 
            data.trucks.each do |truck|
        %>
          <% weight_class = gvwr_by_id(truck.gvwr_class) %>
          <div class="grid-cell <%= weight_class.slug %>">
            <div class="grid-cell-interior">
              <header class="element-header element-header-<%= weight_class.slug %>">
                <%= truck.make %> <%= truck.model %>
              </header>
              <figure class="element-figure">
                <%#= image_tag(lorem.image('300x150', :text => truck.model), :class => 'img-responsive') %>
                <%= image_tag(
                      truck.make.downcase + '-' + 
                      truck.model.to_s.downcase + '-' + 
                      truck.cab_type.downcase + '-' + 
                      '4x' + 
                      truck.drive_wheels.to_s +
                      '.jpg',
                      :class => 'img-responsive'
                ) %>
              <article class="element-body">
                <%= truck.cab_type.to_s + ' Cab 4x' + truck.drive_wheels.to_s %>
              </article>
            </div>
          </div>
        <% end %>
      </div>



